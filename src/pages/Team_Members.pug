//- extends ../templates/contents.pug
include ../templates/mixins


block headVars
    - var title = "Team Members"
    - var tagline = "Team"
    - var requireMathJax = false
    - var banner = "banner-team"

html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Team | Vsycle
  body
    include ../templates/nav.pug
    header.d-flex.justify-content-center.align-items-center
      .banner(class=banner)
        .container
          h1
          p.lead.pl-1

    main
      .container
        .row.d-flex.justify-content-center
          - var teamMembers = [{'name': "Bram Spanoghe", 'description': "Professional goose", 'cls': 'member-bram'}, {'name': "Brent Vanvyaene", 'description': "It's tea time", 'cls': 'member-brent'}, {'name': "Lander De Vos", 'description': "For the kingdom", 'cls': 'member-lander'}, {'name': "Laure Craeye", 'description': "Where am I?", 'cls': 'member-laure'}, {'name': "Marvi van Tongeren", 'description': "Just marvelous", 'cls': 'member-marvi'}, {'name': "Shauny Van Hoye", 'description': "Successor of Mr. Proper", 'cls': 'member-shauny'}]
          each member in teamMembers
            .col-lg-4.col-md-6.col-sm-12
              .hexagon
                .hexagon-in1
                  .hexagon-in2(class=member['cls'])
              .card
                .card-body.text-center
                  h5.card-title #{member['name']}
                  p.card-text #{member['description']}


    include ../templates/footer.pug
